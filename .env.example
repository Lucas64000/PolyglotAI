# ============================================================================
# PolyglotAI Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values.
# Environment variables OVERRIDE config.yaml values.
# ============================================================================

# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME=PolyglotAI
APP_DEBUG=false

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=text

# ============================================================================
# AI PROVIDER SELECTION
# ============================================================================
# Choose your AI provider: "azure", "openai", or "ollama"
# This affects BOTH chat and embeddings
AI_PROVIDER=ollama

# ============================================================================
# OPENAI (if AI_PROVIDER=openai)
# ============================================================================
# Required:
OPENAI_API_KEY=sk-your-api-key-here
# Optional:
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# AZURE OPENAI (if AI_PROVIDER=azure)
# ============================================================================
# All required:
AZURE_OPENAI_API_KEY=your-azure-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_CHAT_DEPLOYMENT=your-chat-deployment-name
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=your-embedding-deployment-name
# Optional:
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# ============================================================================
# OLLAMA (if AI_PROVIDER=ollama)
# ============================================================================
# No API key required - runs locally
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=qwen2.5:7b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ============================================================================
# LLM DEFAULTS (applies to all providers)
# ============================================================================
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024
LLM_TIMEOUT=60.0
LLM_MAX_RETRIES=3

# ============================================================================
# NEO4J DATABASE
# ============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password-here
NEO4J_DATABASE=neo4j
NEO4J_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30
